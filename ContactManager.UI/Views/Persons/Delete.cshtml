@model PersonUpdateDTO

@{
    ViewBag.Title = "Delete Person";
}

<a asp-controller="Persons" asp-action="Index" class="link-hover">Back to Persons List</a>
<h2>Delete Person</h2>

<div class="w-50">
    <form asp-controller="Persons" asp-action="Delete" asp-route-PersonID="@Model.PersonID" method="post">

        @*PersonName*@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="PersonName" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName" class="form-input" disabled/>
            </div>
        </div>


      
        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-green-back">Delete</button>

                
            </div>
        </div>

    </form>
</div>